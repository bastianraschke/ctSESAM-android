<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LockScreenFragment">

    <TextView
        android:text="@string/masterpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMasterpasswordHeading" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/masterPasswordFieldHint"
        android:id="@+id/editTextMasterPassword"
        android:layout_below="@+id/textViewMasterpasswordHeading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMasterPassword"
        android:id="@+id/textViewDecryptionMessage"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/unlockButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewDecryptionMessage"
        android:layout_centerVertical="true"
        android:background="@color/accent_material_light"
        android:text="@string/unlock"
        android:visibility="visible" />

    <Switch
        android:id="@+id/showExpertOptinsSwitch"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/unlockButton"
        android:checked="false"
        android:textOn="@string/hide_expert_options"
        android:textOff="@string/show_expert_options"
        android:text="@string/show_expert_options" />

    <Button
        android:id="@+id/deleteKgkButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/showExpertOptinsSwitch"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:text="@string/delete_kgk_and_settings" />

</RelativeLayout>